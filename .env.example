# CRM Environment Variables
# Copy this file to .env and update with your values

# JWT Secret - MUST change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration (used when running locally)
DATABASE_URL=postgres://crmuser:crmpassword@localhost:5432/crmdb?sslmode=disable

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Feature Flags
ENABLE_SSO=true
ENABLE_SCIM=false
REQUIRE_AUTH=true

# Logging
LOG_LEVEL=info
ACCESS_LOG=true

# Session Configuration
TOKEN_TTL=2h
REFRESH_TOKEN_TTL=168h

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# PgAdmin Credentials (for development)
PGADMIN_EMAIL=admin@crm.local
PGADMIN_PASSWORD=admin